--1. Muestra el nombre de todos las personas de la tabla PERSONAS
SELECT p.NOMBRE FROM PERSONAS p ;

--2 Muestra el DNI y el nombre de todas las personas de la tabla PERSONAS
SELECT NOMBRE , DNI FROM PERSONAS p ;

--3 Muestra la matrícula, el importe (suponemos en euros lo que hay guardado en la BBDD)
--y el importe en dólares americanos (supón un cambio de 1€ = 1.02$) y pon a las
--columnas los alias: COCHE, MULTA_EUROS, MULTA_DOLARES.
SELECT MATRICULA coche, IMPORTE multa_euros, (IMPORTE*1.02) multa_dolares FROM
MULTAS m ;

--4 Muestra el nombre de todas las personas en minúsculas y su DNI. A la columna nombre
--ponle el alias nombre_persona
SELECT LOWER(NOMBRE) nombre_persona, DNI FROM PERSONAS p ;

--5 Muestra en una columna el nombre de las personas y en otra los 4 primeros caracteres
--de su DNI, usando el alias Código_Persona
SELECT NOMBRE , SUBSTR(DNI,1,4) AS codigo_persona FROM PERSONAS p ;

--6 Muestra en una columna el nombre de las personas y en otra los 4 últimos caracteres
-- de su DNI, usando el alias Código_Persona
SELECT NOMBRE , SUBSTR(DNI, 7,9) AS codigo_persona FROM PERSONAS p ;

--7
SELECT MATRICULA , IMPORTE , (IMPORTE*0.5) importe_bonificado FROM MULTAS m ;

--8 Muestra un listado con las matrículas que han tenido multas con su importe y luego su
--importe bonificado (50% de bonificación si pagas en menos de 15 días). Redondea el
--importe bonificado sin decimales. Pon un alias a la columna calculada
SELECT MATRICULA , IMPORTE , ROUND(IMPORTE*0.5,1) importe_bonificado_redondeado
FROM MULTAS m ;

--9 Muestra un listado con las matrículas que han tenido multas con su importe y luego su
--importe bonificado (50% de bonificación si pagas en menos de 15 días). Trunca el
--importe bonificado sin decimales. Pon un alias a la columna calculada.
SELECT MATRICULA , IMPORTE , TRUNC(IMPORTE*0.5,1) importe_bonificado_redondeado
FROM MULTAS m ;

--10 Muestra las personas (DNI) que tienen algún coche (registro en la tabla de matrículas)
SELECT DNI FROM MATRICULAS m ;

--11 Muestra las distintas personas (DNI) que tienen algún coche (registro en la tabla de matrículas)
SELECT DISTINCT DNI FROM MATRICULAS m ;

--12 Muestra el nombre de las personas ordenadas de forma ascendente.
SELECT NOMBRE FROM PERSONAS p ORDER BY NOMBRE ;

--13 Muestra el nombre de las personas ordenadas de forma descendente.
SELECT NOMBRE FROM PERSONAS p ORDER BY NOMBRE DESC ;

--14 Muestra los registros de la tabla de multas ordenados por importe de forma
--descendente y luego por lugar de forma ascendente.
SELECT IMPORTE ,LUGAR FROM MULTAS m ORDER BY IMPORTE DESC , LUGAR ASC ;

--15 Muestra una lista con las 5 primeras filas de la tabla personas (ROWNUM)
SELECT NOMBRE FROM PERSONAS p WHERE rownum < 6;

--16 Muestra todas las multas que tiene el coche con matrícula = 6981-BMN
SELECT * FROM MULTAS m WHERE MATRICULA = '6981-BMN' ;

--17 Muestra todas las multas que tiene la persona con DNI = 451256522T
SELECT * FROM MATRICULAS m WHERE DNI= '451256522T';
SELECT * FROM MULTAS m WHERE MATRICULA = '6578-BJS'OR MATRICULA='A-5782-BK';

--18 Muestra todas las multas que tiene la persona con nombre = DORIS, MICHAEL
SELECT * FROM PERSONAS p WHERE NOMBRE = 'DORIS, MICHAEL' ;
SELECT * FROM MATRICULAS m WHERE DNI= '120365879U';
SELECT * FROM MULTAS m WHERE MATRICULA = '1206-DBN';

--19 Muestra todas las multas cuyo importe sea superior a 300.
SELECT * FROM MULTAS m WHERE IMPORTE > 300;

--20 Muestra todas las multas cuyo importe sea inferior a 100
SELECT * FROM MULTAS m WHERE IMPORTE <100;

--21 Muestra todas las multas cuyo importe esté en el rango entre 150 y 350. Si puedes,
--hazlo de 2 formas distintas..
SELECT * FROM MULTAS m WHERE IMPORTE >= 150 AND IMPORTE <=350;
SELECT * FROM MULTAS m WHERE IMPORTE BETWEEN 150 AND 350;

--22 Muestra todas las multas cuyo importe sea de 50€, 100€ o 200€. Si puedes, hazlo de 2
-- formas distintas.
SELECT * FROM MULTAS m WHERE IMPORTE = 50 OR IMPORTE =100 OR IMPORTE=200;
--falta la segunda manera

--23 Muestra todas las personas cuyo nombre (apellido en realidad) empieza por R
SELECT * FROM PERSONAS p WHERE SUBSTR(NOMBRE,1,1)='R';

--24 Muestra todas las personas cuyo nombre (apellido en realidad) empieza por G o por F
SELECT * FROM PERSONAS p WHERE SUBSTR(NOMBRE,1,1)='G' OR
SUBSTR(NOMBRE,1,1)='F';

--25 Muestra todas las personas cuyo nombre (apellido en realidad) empieza por DO
SELECT * FROM PERSONAS p WHERE SUBSTR(NOMBRE,1,2) = 'DO';

--26  Muestra las personas cuyo nombre o apellidos contengan CIA
SELECT * FROM PERSONAS p WHERE INSTR(NOMBRE, 'CIA')>0 ;
SELECT * FROM PERSONAS p WHERE NOMBRE LIKE '%_CIA_%';

--27 Muestra las personas cuyo nombre acabe en AN
SELECT * FROM PERSONAS p WHERE NOMBRE LIKE '%_AN';
